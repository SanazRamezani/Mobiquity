<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/surface</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="bodyHeadingTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="bodyTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>


    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="AppBarTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="font">@font/montserratsemibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CategoryTitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="font">@font/montserratsemibold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ProductNameTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="font">@font/montserratsemibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProductPriceTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="font">@font/lektonbold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>